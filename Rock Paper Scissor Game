        <script>
            function common(){
                computerMove=Math.random();
            if(computerMove>= 0 && computerMove<1/3){
                computerMove='Rock';
                
            }
            else if(computerMove>=1/3 && computerMove<2/3){
                computerMove='Paper';
                
            }
            else if(computerMove<=2/3 && computerMove<1){
                computerMove='Scissors';
                
            }

            }
         function myfunction1(){
           
                common();
            
                if(computerMove==="Rock"){
                    console.log(`Computers Move: ${computerMove}`);
                    alert("Its a Tie\n\n"+"Your Move: Rock\n"+`Computers Move: ${computerMove}`);
                    
                }
                else if(computerMove=== "Scissors"){
                    console.log(`Computers Move: ${computerMove}`);
                    alert("You Win\n\n"+"Your Move: Rock\n"+`Computers Move: ${computerMove}`);
                    
                }
                else if(computerMove=== "Paper"){
                    console.log(`Computers Move: ${computerMove}`);
                    alert("You Lose\n\n"+"Your Move: Rock\n"+`Computers Move: ${computerMove}`);
                    
                }
         }

         function myfunction2(){
                common();
            
                if(computerMove==="Rock"){
                    console.log(`ComputersMove: ${computerMove}`);
                    alert("You Win\n\n"+"Your Move: Paper\n"+`Computers Move: ${computerMove}`);
                    
                }
                else if(computerMove=== "Scissors"){
                    console.log(`ComputersMove: ${computerMove}`);
                    alert("You Lose\n\n"+"Your Move: Paper\n"+`Computers Move: ${computerMove}`);
                    
                }
                else if(computerMove=== "Paper"){
                    console.log(`ComputersMove: ${computerMove}`);
                    alert("Its a Tie\n\n"+"Your Move: Paper\n"+`Computers Move: ${computerMove}`);
                    
                }

         }

         function myfunction3(){
           
                common();
                if(computerMove==="Rock"){
                    console.log(`ComputersMove: ${computerMove}`);
                    alert("You Lose\n\n"+"Your Move: Scissors\n"+`Computers Move: ${computerMove}`);
                    
                }
                else if(computerMove=== "Scissors"){
                    console.log(`ComputersMove: ${computerMove}`);
                    alert("Its a Tie\n\n"+"Your Move: Scissors\n"+`Computers Move: ${computerMove}`);
                    
                }
                else if(computerMove=== "Paper"){
                    console.log(`ComputersMove: ${computerMove}`);
                    alert("You Win\n\n"+"Your Move: Scissors\n"+`Computers Move: ${computerMove}`);
                    
                }

         }




        </script>
